<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/客製化"
        android:layout_width="431dp"
        android:layout_height="240dp"
        android:background="#45AA6A"
        android:text="@string/客製化"
        tools:layout_editor_absoluteY="240dp" />

    <Button
        android:id="@+id/補助規則分類"
        android:layout_width="431dp"
        android:layout_height="240dp"
        android:background="@drawable/shape_rectangle"
        android:hapticFeedbackEnabled="false"
        android:text="@string/補助規則分類"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/定位"
        android:layout_width="108.5dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="4dp"
        android:text="@string/定位"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/使用紀錄"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/使用紀錄"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:text="@string/使用紀錄"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/媒合功能"
        app:layout_constraintStart_toEndOf="@+id/定位" />

    <Button
        android:id="@+id/媒合功能"
        android:layout_width="108.5dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="4dp"
        android:text="@string/媒合功能"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/個人資料"
        app:layout_constraintStart_toEndOf="@+id/使用紀錄" />

    <Button
        android:id="@+id/個人資料"
        android:layout_width="108.5dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="4dp"
        android:text="@string/個人資料"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/媒合功能" />

</androidx.constraintlayout.widget.ConstraintLayout>