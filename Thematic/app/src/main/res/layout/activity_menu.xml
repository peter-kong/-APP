<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC5288CA"
    tools:context=".Menu">

    <Button
        android:id="@+id/客製化"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_rectangle"
        android:hapticFeedbackEnabled="false"
        android:text="照顧服務需求管理"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/定位"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/補助規則分類"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_rectangle"
        android:hapticFeedbackEnabled="false"
        android:text="長照2.0法規查詢"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/定位"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_rectangle"
        android:text="@string/定位"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/媒合功能"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_rectangle"
        android:text="居家服務媒合"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/補助規則分類"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/個人資料"
        android:layout_width="311dp"
        android:layout_height="139dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/shape_rectangle"
        android:text="@string/個人資料"
        android:textColor="#BBB89D"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/客製化"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:text="Menu"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>