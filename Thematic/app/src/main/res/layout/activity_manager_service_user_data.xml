<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77E79292"
    tools:context=".Service_user_data">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="服務使用者資料維護"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#B9DD8888"
                android:gravity="center"
                android:text="個案資料"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXX"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/性別"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性別:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_性別"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/生日"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="生日:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_生日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXX/XX/XX"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/失能等級"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="失能等級:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_失能等級"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/連絡電話"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手機:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_連絡電話"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="09XXXXXXXX"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/住址"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:text="住址:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_住址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXXXX"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/備註2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#B9DD8888"
                android:gravity="center"
                android:text="照護員"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="09:00~10:00"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="XXX"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="13:00~14:00"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="XXX"
                android:textSize="25sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>