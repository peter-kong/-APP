<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77E79292"
    tools:context=".Day_Condition">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/空白區塊7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/空白區塊8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/每日人力配置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日人力配置"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/空白區塊"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/空白區塊2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/空白區塊3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/輸入月份"
                    android:layout_width="86dp"
                    android:layout_height="71dp"
                    android:ems="10"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/月"
                    android:layout_width="86dp"
                    android:layout_height="71dp"
                    android:text="月"
                    android:gravity="center"
                    android:textSize="36sp" />

                <EditText
                    android:id="@+id/輸入日期"
                    android:layout_width="86dp"
                    android:layout_height="71dp"
                    android:ems="10"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/日"
                    android:layout_width="86dp"
                    android:layout_height="71dp"
                    android:text="日"
                    android:gravity="center"
                    android:textSize="36sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/空白區塊4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/空白區塊5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/檢視"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:text="檢視" />

                <TextView
                    android:id="@+id/空白區塊6"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/下載"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:text="下載" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>