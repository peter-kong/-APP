<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0059FFF3"
    tools:context=".Main" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7759FFF3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|fill_horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:singleLine="false"
                android:text="長照2.0照顧服務規劃管理系統"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@id/textView21"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                app:srcCompat="@mipmap/elderly" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView7"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="111dp"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="111dp"
                android:layout_marginRight="111dp"
                android:layout_marginBottom="20dp"
                android:background="#0059FFF3"
                android:gravity="center"
                android:text="登入"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:text="帳號"
                android:autoSizeTextType="uniform"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/textView3"
                android:ems="10"
                android:hint="請輸入您的信箱"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="65dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="密碼"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText5"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/textView5"
                android:ems="10"
                android:inputType="textPassword" />

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:gravity="center">

                <Button
                    android:id="@+id/main_register"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/btn_default"
                    android:gravity="center"
                    android:text="註冊"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/main_login"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="53dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@id/main_register"
                    android:background="@android:drawable/btn_default"
                    android:gravity="center"
                    android:text="登入"
                    android:textSize="24sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/main_forget_password"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/relative1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="80dp"
                android:autoSizeTextType="uniform"
                android:background="#00FFFFFF"
                android:text="忘記密碼?"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_forget_password"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="51dp"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="manager" />

            <Button
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_forget_password"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:layout_toStartOf="@+id/test"
                android:layout_toLeftOf="@+id/test"
                android:layout_toEndOf="@+id/button26"
                android:layout_toRightOf="@+id/button26"
                android:text="care" />

            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_forget_password"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:text="test" />

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>