<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77E79292"
    tools:context=".Menu_for_user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/使用者Menu"
                android:layout_width="217dp"
                android:layout_height="44dp"
                android:layout_marginStart="176dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="176dp"
                android:gravity="center"
                android:text="主選單"
                android:textSize="36sp" />

            <Button
                android:id="@+id/個人資料"
                android:layout_width="265dp"
                android:layout_height="113dp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/menu_for_user_shape_rectangle"
                android:gravity="center"
                android:text="個人資料"
                android:textSize="20sp" />

            <Button
                android:id="@+id/下次照服時間"
                android:layout_width="265dp"
                android:layout_height="113dp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/menu_for_user_shape_rectangle"
                android:gravity="center"
                android:text="下次照服時間"
                android:textSize="20sp" />

            <Button
                android:id="@+id/最近照服時間"
                android:layout_width="265dp"
                android:layout_height="113dp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/menu_for_user_shape_rectangle"
                android:gravity="center"
                android:text="上一次照服時間"
                android:textSize="20sp" />

            <Button
                android:id="@+id/歷史照服時間"
                android:layout_width="265dp"
                android:layout_height="113dp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/menu_for_user_shape_rectangle"
                android:gravity="center"
                android:text="歷史照服時間"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>