<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7759FFF3"
    tools:context=".Menu_for_manager">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Menu"
                android:textSize="36sp" />

            <Button
                android:id="@+id/照護服務時間排程"
                android:layout_width="320dp"
                android:layout_height="110dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/menu_for_manager_shape_rectangle"
                android:text="照護服務時間排程"
                android:textSize="20sp" />

            <Button
                android:id="@+id/照顧需求查詢"
                android:layout_width="320dp"
                android:layout_height="110dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/menu_for_manager_shape_rectangle"
                android:text="照顧需求查詢"
                android:textSize="20sp" />

            <Button
                android:id="@+id/服務使用者資料維護"
                android:layout_width="320dp"
                android:layout_height="110dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/menu_for_manager_shape_rectangle"
                android:text="服務使用者資料維護"
                android:textSize="20sp" />

            <Button
                android:id="@+id/工作報表維護"
                android:layout_width="320dp"
                android:layout_height="110dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/menu_for_manager_shape_rectangle"
                android:text="工作報表維護"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>