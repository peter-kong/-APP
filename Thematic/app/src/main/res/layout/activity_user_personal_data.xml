<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7759FFF3"
    tools:context=".Personal_data">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4CB3E4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="281dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="個人資料"
                    android:textSize="40dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/user" />

            <TextView
                android:id="@+id/基本資料"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#B9254BBE"
                android:gravity="center"
                android:text="基本資料"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/帳號"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帳號:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@string/個人資料_帳號"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXX"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/性別"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性別:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_性別"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/生日"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="生日:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_生日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXX/XX/XX"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/失能等級"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="失能等級:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_失能等級"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/手機"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手機:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_手機"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09XXXXXXXX"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/連絡電話"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="連絡電話:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_連絡電話"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0X)XXXXXXXX"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/個人資料_電子信箱"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="電子信箱:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/textView63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX@XXXXX"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/住址"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:text="住址:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/個人資料_住址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXXXX"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/備註"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="備註"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/健康狀況"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B9254BBE"
                android:gravity="center"
                android:text="健康狀況"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="30dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>