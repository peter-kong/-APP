<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DD8978E"
    android:screenOrientation="portrait"
    tools:context=".Register">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00F1ECEC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/註冊"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#80D8978E"
                android:gravity="center"
                android:text="註冊"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/基本資料"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#779BC2DD"
                android:gravity="center"
                android:text="基本資料"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/帳號"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="帳號:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/UAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="請輸入信箱"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/密碼"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密碼:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/UPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/姓名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/UName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/性別"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性別"
                android:textSize="24sp" />







            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/生日"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="生日:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/UBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:freezesText="true"
                android:hint="ex:1990.2.20"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/身分證字號"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="身分證字號:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/UIDNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/電話"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="電話:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/UPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/地址"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地址:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/UAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/失能等級"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="失能等級:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ULevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="若無則填0"
                android:inputType="number" />

            <TextView
                android:id="@+id/病史"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#779BC2DD"
                android:gravity="center"
                android:text="健康史"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/UMedHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="如氣喘、骨折等，若皆無責填寫無"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/register_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="確定" />

            <Button
                android:id="@+id/register_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="重填" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>