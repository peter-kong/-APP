<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DD8978E"
    android:screenOrientation="portrait"
    tools:context=".manager_caregiver_manager_output">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DADCDF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/照服員當日工作內容"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#80D8978E"
                android:gravity="center"
                android:text="日工作內容查詢"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="日期:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/日期顯示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/使用者名稱"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="個案名稱:"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/個案下拉選單"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="無資料"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="時間:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/時間顯示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="無資料"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="照服員:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/caregiverID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/服務內容欄位"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="服務內容:"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/服務內容顯示"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/完成度"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="備註:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/備註顯示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>