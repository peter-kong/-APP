<?xml version="1.0" encoding="utf-8"?>
<!-- 類型 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--漸層顏色-->
    <gradient
        android:startColor="#B7629EE9"
        android:endColor="#BBB1FD"
        android:gradientRadius="200dp"
        android:type="radial" />
    <!--<solid android:color="#18506C" />-->
    <!-- 設置圓角 -->
    <corners android:radius="15dp" />

    <!-- 文字與邊框的間距 -->
    <padding
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:left="2dp"/>
    <!-- 形狀大小 -->
    <size
        android:width="80dp"
        android:height="100dp" />
    <!-- 邊框線 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black"
        android:dashGap="2dp"
        android:dashWidth="0dp" />
</shape>